generator client {
  provider = "prisma-client-js"
  //previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Edificios {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  ancho Int?
  largo Int?
  nivel Int?
  costo Int?
  descripcion String?
  recursoPorMinuto Int?
  tipoRecurso String?
  ultimaInteraccion DateTime?
  userEdificios UserEdificios[]
  //----------------------------------------------------------------------------------
//---------------------------------------------------------------------------- SEBA ----------------

 cantidad  Int?// canatidad de capacidad de contruccion de unidades de este tipo de edificio        |

///////////////////////////////////////////////////////////////////////////////////////////
//-------------SOLO ESO  EN EDIFICIO----------------------

 
}

model Users{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  email String @unique
  hash String?
  profileImage String?
  salt String?
  nivel Int
  madera Int
  piedra Int
  pan Int
  ///------------------------------------------------------------------------------------------------
  ///------------------------------------SEBA-------------------------------------------------------
  maderera Int?
  panaderia Int?
  ayuntamiento Int?
  cantera Int?
  muros Int?
  bosque Int?
  herreria Int?
  //------------------------------------------------------------------------------------------------
  //--------------------------------SOLO ESO----------------------------------------------------------------

  unidadesDeTrabajo Int
  userEdificios UserEdificios[]
  mensajes Mensajes[]
  chatsAsUser1 Chats[] @relation("User1Chats")
  chatsAsUser2 Chats[] @relation("User2Chats")
}
model UserEdificios{
    id String @id @default(auto()) @map("_id") @db.ObjectId
  edificioId String @db.ObjectId
  posicion_x Int?
  posicion_y Int?
  userId String @db.ObjectId
  user Users @relation(fields: [userId], references: [id])
  ultimaInteraccion DateTime?
  nivel Int?
  trabajadores Int?

  edificio Edificios @relation(fields: [edificioId], references: [id])
}

model Mensajes{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  chatId String @db.ObjectId
  chat Chats  @relation(fields: [chatId], references: [id])
  emisor String @db.ObjectId
  emisorUserName String @unique
  user Users @relation(fields: [emisor], references: [id])
  madera Int
  piedra Int
  pan Int
  texto String
  fecha DateTime
}

model Chats {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user1 String @db.ObjectId
  user2 String @db.ObjectId
  username1 String
  username2 String
  user1ref Users @relation("User1Chats", fields: [user1], references: [id])
  user2ref Users @relation("User2Chats", fields: [user2], references: [id])
  mensajes Mensajes[]
}